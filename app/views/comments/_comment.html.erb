<p>
  <% user = User.find_by_id(comment.user_id) %>
  <%= link_to user.name, user %><br/>
  <%= comment.body %><br/>
<% if user == current_user %>
	  <%= link_to 'Delete Comment', [comment.micropost, comment],
	               method: :delete,
	               data: { confirm: 'Are you sure?' } %>
<% end %>
</p>